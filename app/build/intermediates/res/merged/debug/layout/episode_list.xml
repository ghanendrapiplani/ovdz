<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/expandable_background"
    android:orientation="vertical"
    android:id="@+id/episodeDetail_layout"
    android:padding="@dimen/padding_ten">

    <TextView
        android:id="@+id/episode_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/grey"
        android:textSize="@dimen/font_normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/episode_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey"
            android:textStyle="italic"
            android:textSize="@dimen/font_normal" />

        <TextView
            android:id="@+id/episode_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view"
            android:textStyle="italic"
            android:paddingLeft="@dimen/padding_five"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_small" />
    </LinearLayout>
    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/view"-->
    <!--android:background="@color/grey"-->
    <!--android:layout_marginTop="@dimen/padding_five"/>-->

</LinearLayout>