<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_twnty"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:layout_marginTop="@dimen/padding_ten"
        >

        <RelativeLayout
            android:id="@+id/season_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple">

            <TextView
                android:id="@+id/season_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_five"
                android:text="Season"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/season_number"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/season_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_five"
                    android:textStyle="italic"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/view"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                   />
                <View
                    android:id="@+id/view2"
                    android:layout_width="@dimen/view"
                    android:layout_height="@dimen/padding_fifteen"
                    android:layout_margin="@dimen/padding_five"
                    android:layout_gravity="center"
                    android:layout_centerVertical="true"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/season_episode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                 />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@color/purple_dark">

                <ImageView
                    android:id="@+id/season_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:src="@drawable/drop" />
            </LinearLayout>


        </RelativeLayout>
    </LinearLayout>

    <!--<android.support.v7.widget.RecyclerView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@id/season_block">-->
    <!--</android.support.v7.widget.RecyclerView>-->
</RelativeLayout>