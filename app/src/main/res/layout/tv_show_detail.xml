<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/tv_grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/movie_grid"
        android:background="@color/pink">

        <LinearLayout
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_ten">

            <TextView
                android:id="@+id/movie_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/Tv_Shows"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />

            <ImageView
                android:id="@+id/movie_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/titl" />

            <TextView
                android:id="@+id/head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/font_normal" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/favr"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="@dimen/movie_image_width"
                android:layout_height="@dimen/movie_image_height"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/padding_twnty"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_twnty">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_five"
                        android:text="Cast : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/cast_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_five"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_five"
                        android:text="Genre : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/genre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_five"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_five"
                        android:text="Runtime : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/runtime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/padding_five"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_five"
                    android:text="Rating : 4"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Views : "
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/desc_view"
        android:orientation="vertical"
        android:layout_below="@id/tv_grid"
        android:paddingLeft="@dimen/padding_ten">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DESCRIPTION"
            android:textColor="@color/purple"
            android:paddingTop="@dimen/padding_five"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_des"
            android:textColor="@color/grey"
            android:textSize="@dimen/font_small"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/drop"
            android:layout_gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/link_layout"
        android:paddingLeft="@dimen/padding_ten"
        android:orientation="horizontal"

        android:layout_below="@+id/desc_view">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMDB"
            android:textColor="@color/purple"
            android:textSize="@dimen/font_small"
            android:textAllCaps="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/link"
            android:textSize="@dimen/font_small"
            android:textColor="@color/grey"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view"
        android:id="@+id/view"
        android:background="@color/grey"
        android:layout_below="@+id/link_layout"
        android:layout_marginTop="@dimen/padding_ten"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/padding_twnty">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text"
                android:textSize="@dimen/font_small"
                android:textColor="@color/grey"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Season 01"
                android:textSize="@dimen/font_small"
                android:textColor="@color/grey"
                android:textAllCaps="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-Episode 01"
                android:textSize="@dimen/font_small"
                android:textColor="@color/grey"
                android:textAllCaps="true" />
        </LinearLayout>

        <Button
            android:id="@+id/dwnldMp4"
            android:layout_width="@dimen/button_tv"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_ten"
            android:layout_marginTop="@dimen/padding_twnty"
            android:background="@color/purple"
            android:drawableLeft="@drawable/download"
            android:paddingLeft="@dimen/padding_ten"
            android:text="Download in Mp4"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <Button
            android:id="@+id/dwnldGp3"
            android:layout_width="@dimen/button_tv"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/padding_ten"
            android:layout_marginTop="@dimen/padding_twnty"
            android:background="@color/purple"
            android:drawableLeft="@drawable/download"
            android:paddingLeft="@dimen/padding_ten"
            android:text="Download in 3GP"
            android:textAlignment="center"
            android:textAllCaps="true" />

    </LinearLayout>
</RelativeLayout>